                                    <Image Source="images/command.png" Width="25"/>

                                </Border>
                                <TextBox
                                    x:Name="AnswerCommandEdit"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Height="30"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0"
