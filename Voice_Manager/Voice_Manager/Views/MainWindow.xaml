                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="Button.Click">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard TargetProperty="Height" TargetName="EditAnswerItemMenu">
                                                        <DoubleAnimation
                                                    From="230"
                                                    To="0"
                                                    Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>

                            </Grid>
                        </Border>

                    </Grid>
                </TabItem>

                <!--arduino managment-->
                <TabItem Height="0" BorderThickness="0">

                </TabItem>

                <!--additional settings-->
                <TabItem Height="0" BorderThickness="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="2"
                            Foreground="White"
                            FontSize="15"
                            Text="Recognition language"
