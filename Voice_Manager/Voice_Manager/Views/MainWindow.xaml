                                    Grid.Row="1"
                                    Grid.Column="1"
                                    IsHitTestVisible="False"
                                    Height="30"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0"
                                    Foreground="Gray"
                                    Padding="6,7,0,0"
                                    FontWeight="SemiBold"
                                    Text="Enter the answer...">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=AssistantAnswer}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <Border
                                    Grid.Row="2"
                                    Grid.ColumnSpan="2"
                                    Background="#27292d"
                                    Height="40"
                                    Margin="20,0,20,0"
