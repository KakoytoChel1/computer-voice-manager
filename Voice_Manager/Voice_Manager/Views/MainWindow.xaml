                                    Height="50"
                                    Width="50"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,8,0">
                                    <Image Source="images/command.png" Width="25"/>

                                </Border>
                                <TextBox
                                    x:Name="AnswerCommand"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Height="30"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0"
                                    Text="{Binding NewAnswerCommand, UpdateSourceTrigger=PropertyChanged}"
                                    Background="#27292d"
                                    Style="{DynamicResource RoundTextBox}"/>
                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    IsHitTestVisible="False"
                                    Height="30"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0"
                                    Foreground="Gray"
                                    Padding="6,7,0,0"
                                    FontWeight="SemiBold"
                                    Text="Enter the command...">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=AnswerCommand}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <Button
                                    Grid.ColumnSpan="2"
                                    Grid.Row="3"
                                    Height="30"
                                    Background="{StaticResource gradient}"
                                    BorderThickness="0"
                                    Content="Add"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontSize="12"
                                    Command="{Binding AddNewAnswerItemCommand}"
                                    Style="{DynamicResource TransparentButtonsStyle}">

                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="Button.Click">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard TargetProperty="Height" TargetName="AddAnswerItemMenu">
                                                        <DoubleAnimation
                                                    From="230"
                                                    To="0"
                                                    Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>

                            </Grid>
                        </Border>

