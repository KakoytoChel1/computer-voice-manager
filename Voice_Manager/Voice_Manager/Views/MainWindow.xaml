                                        <EventTrigger RoutedEvent="Button.Click">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard TargetProperty="Height" TargetName="AddAnswerItemMenu">
                                                        <DoubleAnimation
                                                    From="230"
                                                    To="0"
                                                    Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Border
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Background="#27292d"
                                    Height="40"
                                    Margin="20,0,20,0"
                                    CornerRadius="18">

                                </Border>
                                <Border
                                    Grid.Row="1"
                                    Background="{StaticResource gradient}"
                                    CornerRadius="40"
                                    Height="50"
                                    Width="50"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,8,0">
                                    <Image Source="images/answer.png" Width="25"/>

                                </Border>
                                <TextBox
                                    x:Name="AssistantAnswer"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Height="30"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,0"
                                    Text="{Binding NewAnswer, UpdateSourceTrigger=PropertyChanged}"
                                    Background="#27292d"
                                    Style="{DynamicResource RoundTextBox}"/>
